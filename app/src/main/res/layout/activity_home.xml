<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tofirststory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thirsty Crow"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:onClick="firststory"
             />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tosecondstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Four Friends And A Hunter"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tofirststory"
                android:onClick="secondstory"
            />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tothirdstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mongoose and Brahmin's Wife"
                android:textSize="5dp"
                android:textColor="#fff"
                android:layout_margin="2dp"
                android:layout_below="@id/tosecondstory"
                android:onClick="thirdstory"
            />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tofourthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jackal And Drum"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tothirdstory"
                android:onClick="fourthstory"
            />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tofifthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goats And Jackal"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tofourthstory"
                android:onClick="fifthstory"
            />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tosixthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Lion and The Mouse"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tofifthstory"
                android:onClick="sixthstory"
            />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/toseventhstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Stork and the Crab"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tosixthstory"
                android:onClick="seventhstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/toeightthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tortoise and Geese"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/toseventhstory"
                android:onClick="eighthstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/toninthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tale of Three Fish"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/toeightthstory"
                android:onClick="ninthstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/totenthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foolish Lion and Clever Rabbit"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/toninthstory"
                android:onClick="tenthstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/toeleventhstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elephant and Sparrows"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/totenthstory"
                android:onClick="eleventhstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tothirteenthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Count Wisely"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/toeleventhstory"
                android:onClick="twelthstory"
                tools:ignore="MissingConstraints" />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/toforteenthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Bundle of Sticks"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tothirteenthstory"
                android:onClick="thirteenthstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/tofifteenthstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bear and Two Friends"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/toforteenthstory"
                android:onClick="forteenthstory"
        />

        <com.gc.materialdesign.views.ButtonRectangle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabbit and Turtle"
                android:textSize="5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/tofifteenthstory"
                android:onClick="sixteenthstory"
        />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>